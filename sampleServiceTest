     async function getCountryDetails(code)
            {
                        var settings = {
                        "async": true,
                        "crossDomain": true,
                        "url": "https://restcountries.eu/rest/v2/alpha/"+code,
                        "method": "GET"
                        }
                        return $.ajax(settings).done(response=>response.JSON).done(function (response) {return response.name;});             
            }

